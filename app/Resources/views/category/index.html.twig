{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <h3 class="text-center">All groups</h3>
        <div class="text-center">
            <a class="btn btn-primary btn-sm" href="{{ path('category_new') }}">Add new</a>
        </div>
    </div>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Users in group</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <th>{{ category.users | length }}</th>
                <td>
                    <a class="btn btn-success btn-xs" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
